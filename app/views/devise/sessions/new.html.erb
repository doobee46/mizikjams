<div class="ui grid container">
    <div class="ui three column centered grid">
        <div class="column">
            <h1 class="ui header title">Sign In</h1>
            <p class="sub">Create playlists with your favorite music videos &amp; share them with friends!</p>
        </div>
    </div>
</div>
<div class="ui grid container">
    <div class="ui three column centered grid">
        <div class="column">
            <div class="ui form">
             <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="field">
                <%= f.label :login %>
                <div class="ui left icon input">
                  <%= f.text_field :login, :placeholder => "Email address" %>
                  <i class="user icon"></i>
                <span style="opacity: 1; left: 275px; top: 12.5px; width: 19px; min-width: 19px; height: 13px; position: absolute; background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-position: 0px 0px; border: medium none; display: inline; visibility: visible; z-index: auto;"></span></div>
              </div>
              <div class="field">
                <%= f.label :password %>
                <div class="ui left icon input">
                  <%= f.password_field :password, autocomplete: "off",:placeholder => "Password" %>
                  <i class="lock icon"></i>
                <span style="opacity: 1; left: 275px; top: 12.5px; width: 19px; min-width: 19px; height: 13px; position: absolute; background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-position: 0px 0px; border: medium none; display: inline; visibility: visible; z-index: auto;"></span></div>
              </div>
                <%= f.button "Sign In" , class: 'ui teal button', data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Sign in..."} %>
            </div>
            <div class="action">
                <%= render "devise/shared/links"%>
            </div> 
          </div>
          <%end%>        
          <div class="ui vertical divider">
            Or
          </div>
          <div class="center aligned column">
             <%= link_to user_omniauth_authorize_path(:facebook),class:'ui facebook button' do%>
              <i class="facebook icon"></i>Facebook
            <%end%>
          </div>
        </div>      
</div>





