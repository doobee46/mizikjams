<% provide(:title,"sign up") %> 
<div class="ui middle aligned center aligned grid">
  <div class="column specs ">
    <h2 class="ui red image header">
      <%=image_tag ("form_logo.png"),class:'image'%>
      <!--<img src="assets/images/logo.png" class="image">-->
      <div class="content">
        Sign up to Mizikjams.com
      </div>
    </h2>
       <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "ui large form" }) do |f| %>
      <div class="ui stacked segment move_up">
        <div class="field">  
          <div class="ui left icon input">
            <i class="user icon"></i>
            <%= f.text_field :username ,:placeholder => "Username" %>
          </div>
        </div>
          <div class="field">
            <div class="ui left icon input">
              <%= f.email_field :email, autofocus: true,:placeholder => "Email" %>
               <i class="mail icon"></i>
              </div>
           </div>
              <div class="field">
                  <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %><br/>
                <div class="ui left icon input">
                  <%= f.password_field :password, autocomplete: "off",:placeholder => "Password" %>
                <i class="lock icon"></i>
              </div>
          </div>
        <div class="field">
            <div class="ui left icon input">
              <%= f.password_field :password_confirmation, autocomplete: "off",:placeholder => "Password Confirmation" %>
              <i class="lock icon"></i>
            </div>
          </div>        
        <%= f.button "Sign Up" , class: 'ui fluid large teal submit button', data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Sign in..."} %>
          <div class="ui horizontal divider">
            Or Sign up  with
          </div>
          <%= link_to user_omniauth_authorize_path(:facebook),class:'ui fluid large facebook button' do%>
            <i class="facebook icon"></i>Facebook
         <%end%>

      </div>
      <div class="ui error message">
          <%= devise_error_messages! %>
      </div>
     <%end%> 
      <div class="ui message">
      New to us?
      <%= render "devise/shared/links"%>   
    </div>
  </div>

</div> 

